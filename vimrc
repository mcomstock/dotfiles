filetype plugin on
syntax on
colorscheme color_to_the_max

set t_Co=256

set whichwrap+=<,>,h,l,[,]
set linebreak
set showmatch
set visualbell
set ruler
set background=dark

set hlsearch
set ignorecase
set smartcase
set incsearch

set autoindent
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4

set backspace=indent,eol,start
